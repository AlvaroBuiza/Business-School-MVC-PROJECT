@model Business_School_VF.ViewModel.ClubCreateClubViewModel
@{
    ViewData["Title"] = "Create Club";
    Layout = "_LayoutClub";
}

<div class="container mt-4">
    <h2 class="text-center text-warning mb-4">Create New Club</h2>

    <div class="card shadow-lg bg-dark text-light">
        <div class="card-header border-bottom border-warning">
            <h5 class="text-warning">Club Information</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Club" asp-action="CreateClub" method="post" id="ClubForm" novalidate>
                <div class="mb-3">
                    <label asp-for="ClubName" class="form-label text-light"></label>
                    <input asp-for="ClubName" class="form-control bg-dark text-light border-warning"
                           placeholder="Enter club name" />
                    <span asp-validation-for="ClubName" class="text-danger"></span>
                    <div class="invalid-feedback" data-valmsg-for="ClubName"></div>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentId" class="form-label text-light">Department</label>
                    <select asp-for="DepartmentId" asp-items="Model.DepartamentList"
                            class="form-select bg-dark text-light border-warning">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    <div class="invalid-feedback" data-valmsg-for="DepartmentId"></div>
                </div>

                <button type="submit" class="btn btn-admin w-100">Create Club</button>
            </form>
        </div>
    </div>
</div>


   
    <script src="~/js/ClubValidations.js"></script>

