@model Business_School_VF.ViewModel.CreateInscriptionViewModel
@{
    ViewData["Title"] = "Register in Club";
    Layout = "_LayoutStudent";
}

<div class="container mt-4">
    <h2 class="text-center text-warning mb-4">Register in a Club</h2>

    <div class="card shadow-lg bg-dark text-light">
        <div class="card-header border-bottom border-warning">
            <h5 class="text-warning">Inscription Information</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Inscription" asp-action="CreateInscription" method="post" id="InscriptionForm" novalidate>
                <input type="hidden" asp-for="StudentId" />

                <div class="mb-3">
                    <label class="form-label text-light">Student</label>
                    <input type="text" class="form-control bg-dark text-light border-warning"
                           value="@Model.StudentUser" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="ClubId" class="form-label text-light">Club</label>
                    <select asp-for="ClubId" asp-items="Model.Clubs"
                            class="form-select bg-dark text-light border-warning">
                        <option value="">-- Select Club --</option>
                    </select>
                    <span asp-validation-for="ClubId" class="text-danger"></span>
                    <div class="invalid-feedback" data-valmsg-for="ClubId"></div>
                </div>

                <button type="submit" class="btn btn-admin w-100">Register</button>
                <a asp-action="MyInscriptions" class="btn btn-secondary w-100 mt-2">Cancel</a>
            </form>
        </div>
    </div>
</div>


    <script src="~/js/InscriptionValidations.js"></script>

