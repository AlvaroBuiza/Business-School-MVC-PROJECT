@model Business_School_VF.Models.Person
@{
    ViewData["Title"] = "Edit Person";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h2 class="text-center text-warning mb-4">Edit Person</h2>

    <div class="card shadow-lg bg-dark text-light">
        <div class="card-header border-bottom border-warning">
            <h5 class="text-warning">Update Person Information</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Admin" asp-action="EditPerson" method="post">
                <input type="hidden" asp-for="PersonId" />

                <div class="mb-3">
                    <label asp-for="PersonName" class="form-label text-light"></label>
                    <input asp-for="PersonName" class="form-control bg-dark text-light border-warning"
                           placeholder="Enter person name" required />
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Birthday" class="form-label text-light"></label>
                    <input asp-for="Birthday" type="date" class="form-control bg-dark text-light border-warning"
                           placeholder="Select birthday" required />
                    <span asp-validation-for="Birthday" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PersonUser" class="form-label text-light"></label>
                    <input asp-for="PersonUser" class="form-control bg-dark text-light border-warning"
                           placeholder="Enter email/username" required />
                    <span asp-validation-for="PersonUser" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-admin w-100">Save Changes</button>
                <a asp-action="AllPersons" class="btn btn-secondary w-100 mt-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
