@using Business_School_VF.ViewModel
@model ClubCreateClubViewModel


@{
    ViewData["Title"] = "Edit Club";
    Layout = "_LayoutClub";
}

<div class="container mt-4">
    <h2 class="text-center text-warning mb-4">Edit Club</h2>

    <div class="card shadow-lg bg-dark text-light">
        <div class="card-header border-bottom border-warning">
            <h5 class="text-warning">Update Club Information</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Club" asp-action="EditClub" method="post">
                
                <input type="hidden" asp-for="Club.ClubId" />

                <div class="mb-3">
                    <label asp-for="Club.ClubName" class="form-label text-light"></label>
                    <input asp-for="Club.ClubName" class="form-control bg-dark text-light border-warning"
                           placeholder="Enter club name" required />
                    <span asp-validation-for="Club.ClubName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Club.DepartamentId" class="form-label text-light">Department</label>
                    <select asp-for="Club.DepartamentId" asp-items="Model.DepartamentList"
                            class="form-select bg-dark text-light border-warning" required>
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="Club.DepartamentId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-admin w-100">Save Changes</button>
                <a asp-action="AllClubs" class="btn btn-secondary w-100 mt-2">Cancel</a>
            </form>
        </div>
    </div>
</div>


