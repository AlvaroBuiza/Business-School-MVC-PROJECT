@using Business_School_VF.Models.ViewModels
@model IEnumerable<PersonRoleAllPersonViewModel>
@{
    ViewData["Title"] = "All Registered Persons";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-warning">Registered Persons with Roles</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <strong>No persons registered yet.</strong>
        </div>
    }
    else
    {
        <div class="card shadow-lg bg-dark text-light">
            <div class="card-header bg-dark border-bottom border-warning">
                <h5 class="mb-0 text-warning">Persons List</h5>
            </div>
            <div class="card-body">
                <table class="table table-dark table-hover align-middle">
                    <thead class="table-dark border-bottom border-warning">
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Name</th>
                            <th scope="col">Birthday</th>
                            <th scope="col">User</th>
                            <th scope="col">Role</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.person.PersonId</td>
                                <td>@item.person.PersonName</td>
                                <td>@item.person.Birthday.ToShortDateString()</td>
                                <td>@item.person.PersonUser</td>
                                <td><span class="badge bg-warning text-dark">@item.rol</span></td>
                                <td class="text-center">
                                    <a asp-action="EditPerson"  asp-route-id="@item.person.PersonId"
                                       class="btn btn-admin btn-sm me-2">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    
                                        <button class="btn btn-danger btn-sm btn-delete" data-id="@item.person.PersonId">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>

                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
<script>

document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".btn-delete").forEach(btn => {
        btn.addEventListener("click", async (e) => {
            e.preventDefault();
            const id = btn.getAttribute("data-id");
            if (!id) {
                alert("Id no encontrado");
                return;
            }
            if (!confirm("Are you sure?")) return;

            try {
                const response = await fetch('/Admin/DeletePerson', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: 'id=' + encodeURIComponent(id)
                });

                if (!response.ok) {
                    alert("Error en la petición (status) ");
                    return;
                }

                const data = await response.json();

                if (data.success) {
                    const row = btn.closest("tr");
                    if (row) {
                        row.style.transition = "opacity 0.3s";
                        row.style.opacity = 0;
                        setTimeout(() => row.remove(), 300);
                    }
                } else {
                    alert(data.message || "Error al eliminar el usuario.");
                }
            } catch (error) {
                alert("Error en la petición AJAX.");
                console.error(error);
            }
        });
    });
});
</script>