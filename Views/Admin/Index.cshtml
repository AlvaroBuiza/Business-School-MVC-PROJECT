@using Business_School_VF.ViewModel
@model PersonAndStudentViewModel
@{
    ViewData["Title"] = "Admin Panel";
    Layout = "_LayoutAdmin";
}

<div class="container mt-4">
    <h2 class="text-center text-warning mb-4">Admin Panel - Add Persons</h2>

    <div class="row">
       
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg bg-dark text-light h-100">
                <div class="card-header border-bottom border-warning">
                    <h5 class="text-warning">Add Department Manager</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="CreateDepartmentManager" method="post">
                        <div class="mb-3">
                            <label asp-for="Person.PersonName" class="form-label text-light"></label>
                            <input asp-for="Person.PersonName" class="form-control bg-dark text-light border-warning"
                                   placeholder="Enter manager name" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Person.Birthday" class="form-label text-light"></label>
                            <input asp-for="Person.Birthday" type="date" class="form-control bg-dark text-light border-warning"
                                   placeholder="Select birthday" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Person.PersonUser" class="form-label text-light"></label>
                            <input asp-for="Person.PersonUser" class="form-control bg-dark text-light border-warning"
                                   placeholder="Enter email/username" required />
                        </div>
                        <button type="submit" class="btn btn-admin w-100">Register Manager</button>
                    </form>
                </div>
            </div>
        </div>

        
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg bg-dark text-light h-100">
                <div class="card-header border-bottom border-warning">
                    <h5 class="text-warning">Add Club Leader</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="CreateClubLeader" method="post">
                        <div class="mb-3">
                            <label asp-for="Person.PersonName" class="form-label text-light"></label>
                            <input asp-for="Person.PersonName" class="form-control bg-dark text-light border-warning"
                                   placeholder="Enter leader name" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Person.Birthday" class="form-label text-light"></label>
                            <input asp-for="Person.Birthday" type="date" class="form-control bg-dark text-light border-warning"
                                   placeholder="Select birthday" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Person.PersonUser" class="form-label text-light"></label>
                            <input asp-for="Person.PersonUser" class="form-control bg-dark text-light border-warning"
                                   placeholder="Enter email/username" required />
                        </div>
                        <button type="submit" class="btn btn-admin w-100">Register Leader</button>
                    </form>
                </div>
            </div>
        </div>

        
        <div class="col-md-4 mb-4">
            <div class="card shadow-lg bg-dark text-light h-100">
                <div class="card-header border-bottom border-warning">
                    <h5 class="text-warning">Add Student</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Admin" asp-action="CreateStudent" method="post">
                        <div class="mb-3">
                            <label asp-for="Student.StudentName" class="form-label text-light"></label>
                            <input asp-for="Student.StudentName" class="form-control bg-dark text-light border-warning"
                                   placeholder="Enter student name" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Student.Birthday" class="form-label text-light"></label>
                            <input asp-for="Student.Birthday" type="date" class="form-control bg-dark text-light border-warning"
                                   placeholder="Select birthday" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Student.StudentUser" class="form-label text-light"></label>
                            <input asp-for="Student.StudentUser" class="form-control bg-dark text-light border-warning"
                                   placeholder="Enter email/username" required />
                        </div>
                        <button type="submit" class="btn btn-admin w-100">Register Student</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info text-center mt-4">
            @ViewBag.Message
        </div>
    }
</div>
